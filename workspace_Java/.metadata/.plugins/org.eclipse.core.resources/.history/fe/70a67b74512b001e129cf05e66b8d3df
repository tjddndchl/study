import java.util.ArrayList;
import java.util.Collections;

public class Example7 {

    public static void main(String[] args) {
        ArrayList<Integer> weekLotto = makeRandomLotto();
        System.out.println(weekLotto.toString());

        String[] numArr = {"1", "18"};
        weekLotto = makeFixedLotto(numArr);
        System.out.println(weekLotto.toString());
    }

    public static ArrayList<Integer> makeRandomLotto() {
        ArrayList<Integer> num = new ArrayList<Integer>();
        while (num.size() < 6) {
            int randomNum = (int) (Math.random() * 45 + 1);
            if (!num.contains(randomNum)) {
                num.add(randomNum);
            }
        }
        Collections.sort(num);
        return num;
    }

    public static ArrayList<Integer> makeFixedLotto(String[] strArr) {
        ArrayList<Integer> num = new ArrayList<Integer>();
        for (String str : strArr) {
            num.add(Integer.parseInt(str));
        }

        while (num.size() < 6) {
            int randomNum = (int) (Math.random() * 45 + 1);
            if (!num.contains(randomNum)) {
                num.add(randomNum);
            }
        }
        Collections.sort(num);
        return num;
    }
}
