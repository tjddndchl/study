package pratice.submit01.classexample9_2;

import java.util.ArrayList;
import java.util.Scanner;

public class CafeMain {
	
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Cafe starbucks = new Cafe("스타벅스");
		starbucks.addCoffee(new Coffe("아메리카노", 5000));
		starbucks.addCoffee(new Coffe("카푸치노", 6000));
		starbucks.addCoffee(new Coffe("오곡라뗴", 7000));
		Cafe akaCafe = new Cafe("아카");
		akaCafe.addCoffee(new Coffe("아메리카노", 2500));
		akaCafe.addCoffee(new Coffe("바닐라라떼", 3000));
		akaCafe.addCoffee(new Coffe("아이스티", 3500));
		
		while(true) {
			System.out.println("1.스타벅스 방문|2. 아카 방문 |3.사무실");
			int b = Integer.parseInt(scanner.nextLine());
			if(b==1) {
				starbucks.showMenu();
				
			}
			
		}
	
	
	}

}
