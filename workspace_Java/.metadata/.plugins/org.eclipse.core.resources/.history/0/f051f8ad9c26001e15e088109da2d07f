package ch05_control;

public class LoopWhile {

	public static void main(String[] args) {
		int i = 1;
		while(i <= 10) {
			System.out.println(i);
			i++;
		}
		int j =1;
		
		//조건이 true이면 반복(무한루프 조심해야함)
		while (true) {
			System.out.println(j);
			j++;
			if(j==10) {
				
			}
			
		}
		
		
		boolean flag =true;
		while (flag) {
			j++;
			System.out.println(j);
			if(j==20) {
				flag = false;
			}
		}
	}

}
